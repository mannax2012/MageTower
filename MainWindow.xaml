<Window x:Class="MageTower.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MageTower"
        mc:Ignorable="d"
        Title="MainWindow"         
        Height="450" 
        Width="800" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        ResizeMode="NoResize"
        Background="Black">
    <Grid>
        <!-- Define a Frame control to host the pages -->
        <Frame x:Name="MainFrame" MouseLeftButtonDown="Window_MouseLeftButtonDown" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
